{
    "manifest_version": 3,
    "name": "Trillium Voice Chat",
    "version": "250227",
    "description": "Voice chat sidebar extension",
    "permissions": [
      "sidePanel",
      "activeTab",      
      "tabs",
      "scripting",
      "storage"        
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "side_panel": {
      "default_path": "sidebar/sidebar.html"
    },
    "background": {
      "service_worker": "background/background.js",
      "type": "module"
    }
  }

